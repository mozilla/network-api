{
  "name": "network-api",
  "description": "API and CMS for The Mozilla Network site",
  "addons": [
    "heroku-postgresql"
  ],
  "scripts": {
    "postdeploy": "python app/manage.py migrate"
  },
  "env": {
    "DEBUG": {
        "required": true
    },
    "DJANGO_SECRET_KEY": {
        "required": true
    },
    "DATABASE_URL": {
        "required": true
    },
    "CORS_WHITELIST": {
        "required": true
    },
    "CORS_REGEX_WHITELIST": {
        "required": true
    },
    "XSS_PROTECTION": {
        "required": true
    },
    "CONTENT_TYPE_NO_SNIFF": {
        "required": true
    },
    "SET_HSTS": {
        "required": true
    },
    "SSL_REDIRECT": {
        "required": true
    },
    "X_FRAME_OPTIONS": {
        "required": true
    },
    "AWS_ACCESS_KEY_ID": {
        "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
        "required": true
    },
    "AWS_STORAGE_ROOT": {
        "required": true
    },
    "AWS_STORAGE_BUCKET_NAME": {
        "required": true
    },
    "AWS_S3_CUSTOM_DOMAIN": {
        "required": true
    }
  }
}
